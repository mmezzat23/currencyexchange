<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Text Fields-->



    <style name="Widget.App.TextInputLayout.AutoComplete" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">?attr/scrimBackground</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="hintEnabled">false</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconDrawable">@drawable/ic_down</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="textFillColor">@color/black</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="materialThemeOverlay">@style/Widget.App.AutoTextLayout</item>
    </style>
    <style name="MyAutoCompleteText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">?colorOnSurface</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="Widget.App.AutoTextLayout" parent="">
        <item name="autoCompleteTextViewStyle">@style/MyAutoCompleteText</item>
    </style>
</resources>